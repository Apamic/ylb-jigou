                        pageNum: this.drNum,
                        pageSize: this.drPageSize,
                        timeInterval: this.radio1,
                        timeEnd:  this.value1[1],
                        timeStart:  this.value1[0]
                    }
                }).then(res => {
                    this.drList = res.data.data
                    this.drTotal = res.data.total
                    // console.log(res.data)
                })
            },

            getRecordList() {
                this.$axios({
