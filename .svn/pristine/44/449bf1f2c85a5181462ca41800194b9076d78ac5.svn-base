<script>
    import commonHe from '../../components/commonHe'
    import baseUrl from '@/api/base.js'

    export default {
        data() {
            return {

                title: '',

                groupId: '',
                baseUrl: '',

                form: {
                    groupId: null,
                    diseases: [],
                    gdesc: null,
                    gimg: null,
                    gimgUrl: null,
                    gname: null,
                    gphone: null,
                    groupUsers: [],
                    gteamleader: null,
                },

                rules: {
                    gname:[
                        {required: true, message: '请输入名称!', trigger: ['blur','change']},
                    ]
                },

                diseaseName: '',
                nameCn: '',

                list: [],

                arrs: [],

                arr: [],

                arrss: [],

                objs: {},

                dialogImageUrl: '',
                dialogVisible: false,

                //以上是右边表头form

                count: 1,
                //tab切换方法默认第二个
                dialogFormVisible: false,

                dialogFormVisible2: false,

                dialogFormVisible3: false,

                pageNum: 1,
                total: 0,
            };
        },
        created() {
            this.userId = localStorage.getItem("userId")
            this.groupId = this.$route.query.groupId
            if (this.groupId) {
                this.getGroupDetail()
                // console.log(this.arr)
            }
            this.baseUrl = baseUrl + 'upload/res'

            console.log(this.groupId)

            this.getGroupDiseaseNo()
            this.getMemberChooseNo()
            // this.getGroupDetail()
            // console.log(this.groupId)
            // alert(this.userId)
        },

        watch: {
            'diseaseName'() {
                this.pageNum = 1
                this.getGroupDiseaseNo()
            },

            'nameCn'() {
                this.pageNum = 1
                this.getMemberChooseNo()
            }
        },

        methods: {

            handleCurrentChange(val) {
                this.pageNum = val

                if (this.title == '服务') {
                    this.getGroupDiseaseNo()
                } else {
                    this.getMemberChooseNo()
                }
            },

            onShow(title) {
                this.title = title
                this.pageNum = 1
                // this.list = []
                if (this.title == '服务') {
                    this.getGroupDiseaseNo()
                    this.dialogFormVisible2 = true
                } else {
                    this.dialogFormVisible3 = true
                    this.getMemberChooseNo()
                }
            },

            addItem(item) {

                if (this.title == '服务') {
                    // console.log(1)
                    if (this.form.diseases == null) {
                        this.form.diseases = []
                    }

                    if (this.form.diseases.length >= 6) {
                        return this.$message('最多只能选6个标签')
                    }

                    this.form.diseases.push(item)
                    this.setSelected(this.list,this.form.diseases)
                }

                if (this.title == '队长') {
                    // console.log(2)

                    this.arrs = []
                    // this.getMemberChooseNo()
                    this.objs = item
                    this.arrs.push(item)
                    console.log(this.arrs)
                    let obj = {
                        nameCn: this.objs.nameCn,
                        userId: this.objs.drId
                    }

                    this.list.forEach(item => {
                        this.$set(item,'pit',false)
                    })

                    this.form.gteamleader = obj
                    this.setSelected(this.list,this.arrs)
                    // console.log(this.list)
                }

                if (this.title == '成员') {
                    // console.log(3)
                    if (this.form.groupUsers == null) {
                        this.form.groupUsers = []
                    }

                    let obj = {
                        nameCn: item.nameCn,
                        userId: item.drId
                    }

                    this.form.groupUsers.push(obj)
                    // console.log('arrss',this.arrss)
                    // console.log('groupUsers',this.form.groupUsers)
                    // console.log('arrs',this.arrs)
                    // this.arrss.push(...this.form.groupUsers,...this.arrs)
                    // console.log(this.arrss)

                    this.setSelected(this.list,this.form.groupUsers)
                }

            },

            setSelected(list,arr) {
                arr.forEach(item => {
                    list.forEach(items => {
                        if (item.diseaseId) {
                            if (item.diseaseId == items.diseaseId) {
                                this.$set(items,'pit',true)
                            }
                        }

                        if (item.drId) {
                            if (item.drId == items.drId) {
                                this.$set(items,'pit',true)
                            }
                        }

                        if (item.userid) {
                            if (item.userid == items.drId) {
                                this.$set(items,'pit',true)
                            }
                        }

                        if (item.userId) {
                            if (item.userId == items.drId) {
                                this.$set(items,'pit',true)
                            }
                        }

                    })
                })
                // console.log(list,arr)
            },

            onAddSub(formName) {
                this.$refs[formName].validate((valid) => {
                    if (valid) {
                        this.$axios({
                            url: 'group/add',
                            method: 'post',
                            data: this.form
                        }).then(res => {
                            // console.log(res)
                            this.$router.go(-1)
                        })
                    } else {
                        console.log('error submit!!');
                        return false;
                    }
                });
            },

            getGroupDetail() {
                this.$axios({
                    url: 'group/detail',
                    method: 'post',
                    data: {
                        groupId: this.groupId
                    }
                }).then(res => {
                    this.form = res.data.data
                    if (this.form.gteamleader == null) {
                        return
                    } else {
                        this.arrs.push(this.form.gteamleader)
                    }

                })
            },

            handleClose(tag,arr) {
                arr.splice(arr.indexOf(tag),1)
                console.log(arr)
                // this.arrss.forEach((item,index) => {
                //     if (item.userId == tag.drId) {
                //         this.arrss.splice(index,1)
                //     }
                // })
                // console.log(this.arrss)
                // console.log(this.arrss)
            },

            //以下是上传图片方法
            handleAvatarSuccess(res, file) {
                this.form.gimg = res.data.recId
                this.form.gimgUrl = URL.createObjectURL(file.raw);
            },

            beforeAvatarUpload(file) {
                const isJPG = file.type === 'image/jpeg';
                const isPNG = file.type === 'image/png';
                const isLt2M = file.size / 1024 / 1024 < 5;

                if (!isJPG && !isPNG) {
                    this.$message.error('上传头像图片只能是 JPG,PNG 格式!');
                    return isJPG && isPNG
                }

                if (!isLt2M) {
                    this.$message.error('上传头像图片大小不能超过 5MB!');
                    return isLt2M
                }
            },

            handleRemove(file, fileList) {
                console.log(file, fileList);
            },
            handlePictureCardPreview(file) {
                this.dialogImageUrl = file.url;
                this.dialogVisible = true;
            },
            //以上是上传图片方法
            onSubmit(formName) {
                this.$refs[formName].validate((valid) => {
                    if (valid) {
                        this.$axios({
                            url: 'group/update',
                            method: 'post',
                            data: this.form
                        }).then(res => {
                            console.log('保存',res.data)
                            this.$router.go(-1)
                        })
                    } else {
                        console.log('error submit!!');
                        return false;
                    }
                });
            },

            handleNodeClick(data) {
                console.log(data);
            },

            getGroupDiseaseNo() {
                this.$axios({
                    url: 'group/disease/no',
                    method: 'post',
                    data: {
                        groupId: this.groupId,
                        diseaseName: this.diseaseName,
                        pageNum: this.pageNum,
                        pageSize:10

                    }
                }).then(res => {
                    this.list = res.data.data
                    this.total = res.data.total
                    if (this.form.diseases == null) {
                        this.form.diseases = []
                    }

                    this.setSelected(this.list,this.form.diseases)
                    // console.log('Disease',res)
                })
            },

            getMemberChooseNo() {
                this.$axios({
                    url: 'group/member/choose/no',
                    method: 'post',
                    data: {
                        groupId: this.groupId,
                        nameCn: this.nameCn,
                        pageNum: this.pageNum,
                        pageSize:10
                    }
                }).then(res => {
                    this.list = res.data.data
                    this.total = res.data.total

                    if (this.title == '队长' ) {
                        this.setSelected(this.list,this.arrs)
                    } else {
                        this.setSelected(this.list,this.form.groupUsers)
                    }

                })
            },

        },
        components: {
            commonHe
        },
        mounted() {
            let w = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth; //浏览器宽度
            let h = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight; //浏览器高度
            document.getElementsByClassName("style-box")[0].style.height = (h - 68) + "px";
            document.getElementsByClassName("style-box")[0].style.width = (w - 200) + "px";
            document.getElementById("box").style.width = (w - 280) + "px";
            document.getElementById("box").style.height = (h - 120) + "px";
        }

    }
</script>
